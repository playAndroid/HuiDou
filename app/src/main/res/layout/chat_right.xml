<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_crate_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#999"
        android:text="2016-10-10"
        android:textColor="#fff"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/chat_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chat_to_icon"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/my_qiaoba" />

            <TextView
                android:id="@+id/chat_to_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"
                android:text="筱北"
                android:textSize="12sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/chat_to_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/chat_background"
            android:background="@drawable/chatto_bg_normal"
            android:gravity="center"
            android:text="内容" />
    </RelativeLayout>
</LinearLayout>